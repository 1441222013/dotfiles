[user]
	email = wtq1990@gmail.com
	name = Tanky Woo
[push]
	default = simple
[core]
	excludesfile = /home/tankywoo/.gitignore
	quotepath = false
[diff]
	tool = vimdiff
[merge]
	tool = vimdiff
[difftool]
	prompt = false

[alias]
	s = status
	l = log --pretty=oneline -n 20 --graph --abbrev-commit
	b = branch
	ci = commit
	ca = commit -a
	pl = pull
	ps = push

[color]
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
